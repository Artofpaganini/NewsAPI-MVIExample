<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="NewApi">

    <style name="BaseButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@style/TextAppearance.FontMedium</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="RedButton" parent="BaseButton">

        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.ABM.Button" parent="Widget.AppCompat.Button.Borderless"/>

    <style name="Widget.ABM.Button.Primary">
        <item name="android:textAppearance">@style/TextAppearance.ABM.Button.White</item>

    </style>

    <style name="Widget.ABM.Button.Secondary">
        <item name="android:textAppearance">@style/TextAppearance.ABM.Button</item>

    </style>

</resources>