<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="InputsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="textInputStyle">@style/InputsTextInputLayoutStyle</item>
        <item name="editTextStyle">@style/InputsEditTextStyle</item>


        <item name="colorAccent">@color/text_black</item>
        <item name="colorControlNormal">@color/divider_color</item>
        <item name="colorControlActivated">@color/ui_primary</item>

    </style>

    <style name="InputsTextInputLayoutStyle" parent="Widget.Design.TextInputLayout" />

    <style name="Widget.Design.TextInputLayout" parent="android:Widget">
        <item name="boxBackgroundMode">none</item>
        <item name="hintTextAppearance">@style/InputsHintTextStyle</item>
        <item name="helperTextTextAppearance">@style/InputsHelperTextStyle</item>
        <item name="errorTextAppearance">@style/TextAppearance.Design.Error</item>

        <item name="counterTextAppearance">@style/TextAppearance.Design.Counter</item>
        <item name="counterOverflowTextAppearance">@style/TextAppearance.Design.Counter.Overflow</item>
        <item name="helperTextEnabled">true</item>
    </style>

    <style name="InputsHintTextStyle" parent="TextAppearance.Design.Hint">

        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="InputsHelperTextStyle" parent="TextAppearance.Design.HelperText">

        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="InputsEditTextStyle" parent="Widget.AppCompat.EditText">

        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:paddingTop">@dimen/paddingXXS</item>
    </style>

    <style name="InputsIntegerEditTextStyle" parent="InputsEditTextStyle">
        <item name="android:inputType">number</item>
    </style>


</resources>