<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AutoCompleteToolbarStyle" parent="ABM.Black.AppBarOverlay">
        <item name="android:background">@color/ui_primary</item>
        <item name="navigationIcon">?attr/homeAsUpIndicator</item>
        <item name="titleTextAppearance">@style/TextAppearance.ABM.Headline4</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="AutoCompleteSuggestionStyle" parent="TextAppearance.ABM.Subtitle2">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="AutoCompleteNoResultsStyle" parent="TextAppearance.ABM.Body2.Secondary">

        <item name="android:drawablePadding">@dimen/auto_complete_no_results_icon_padding_bottom</item>
        <item name="android:gravity">center</item>
    </style>

</resources>