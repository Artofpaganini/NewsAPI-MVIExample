<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ArchProgressWidget">
        <attr name="progressBarArcWidth" format="dimension" />
    </declare-styleable>
    <declare-styleable name="MoneyInputView">
        <attr name="balance_input" format="string" />
        <attr name="currency_input" format="string" />
    </declare-styleable>

    <declare-styleable name="TitleComponent">
        <attr name="icon" format="reference" />
        <attr name="title" format="string" />
    </declare-styleable>

    <declare-styleable name="DropDownCell">
        <attr name="dropDownTitle" format="string"/>
    </declare-styleable>

    <declare-styleable name="NameValueTextView">
        <attr name="name" format="string"/>
        <attr name="value" format="string"/>
    </declare-styleable>

    <declare-styleable name="MoneyTextView">
        <attr name="sum" format="string"/>
        <attr name="currency" format="string"/>
        <attr name="sumColor" format="color"/>
        <attr name="sumFractionColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="FloatingEditText">
        <attr name="hint" format="string" />
        <attr name="hintColor" format="color" />
        <attr name="textColor" format="color" />
        <attr name="isEnabled" format="boolean" />
        <attr name="text" format="string" />
        <attr name="disableDefaultHorizontalPadding" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="ClickableTextView">
        <attr name="colorOfText" format="color"/>
    </declare-styleable>

    <declare-styleable name="PinView">
        <attr name="pin_state" format="enum">
            <enum name="sms" value="0"/>
            <enum name="pin" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="ProgressTextView">
        <attr name="ptv_progressText" format="string" />
        <attr name="ptv_progressAlpha" format="float" />
    </declare-styleable>

    <declare-styleable name="BalanceTextView">
        <attr name="fontInteger" format="integer" />
        <attr name="fontFraction" format="integer" />
    </declare-styleable>

    <declare-styleable name="RippleView">
        <attr name="rv_backgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="CustomViewPager" >
        <attr name="swipe_orientation" format="enum" >
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>

</resources>