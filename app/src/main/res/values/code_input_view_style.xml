<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CodeInputViewStyle" parent="TextAppearance.ABM.Headline2">
        <item name="android:cursorVisible">false</item>
        <item name="android:digits">1234567890</item>
        <item name="android:inputType">number</item>
        <!--default code length-->
        <item name="android:maxLength">4</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="CodeInputView.Dark" parent="CodeInputViewStyle">
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="CodeInputView.Light" parent="CodeInputViewStyle">
        <item name="android:textColor">@color/text_primary</item>

    </style>

    <style name="CodeInputView.Light.Masked" parent="CodeInputView.Light">
        <item name="android:inputType">numberPassword</item>

    </style>


</resources>