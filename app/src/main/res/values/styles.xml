<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AbmEditTextTheme" parent="ABM.Base">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="AbmEdtTextHintStyle" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="ABM.Base" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:configChanges">orientation</item>
    </style>

    <style name="CalloutM">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="CalloutR">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="CalloutL">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="Title2B">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="Subhead">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="SubheadR" parent="Subhead">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="SubheadM" parent="Subhead">
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Body">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="BodyM" parent="Body">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="CaptionM" parent="Caption">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="CaptionR" parent="Caption">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Title6">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Title4">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Title4M" parent="Title4">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Title1M">
        <item name="android:textSize">34sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Title3">
        <item name="android:textSize">22sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Title3M" parent="Title3">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Button" />

    <style name="Button.Action" parent="Widget.AppCompat.Button.Colored">

        <item name="android:textColor">@color/white</item>
    </style>
    <style name="BottomNavigation">
        <item name="android:background">@color/white</item>



        <item name="paddingStart">10dp</item>
        <item name="paddingEnd">10dp</item>
    </style>


    <style name="TextInputLayout" parent="@style/Widget.Design.TextInputLayout">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/red_brand</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">@style/TextAppearance.FontMedium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AlfaDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/red_dark</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
        <item name="android:windowTitleStyle">@style/DialogTitleTextStyle</item>
    </style>

    <style name="DialogTitleTextStyle">
        <item name="android:textColor">@color/dark_indigo</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAppearance">@style/TextAppearance.FontMedium</item>
    </style>

    <style name="FloatingEditTextTheme" parent="ABM.Base">
        <item name="android:textSize">14sp</item>
        <item name="colorControlNormal">@color/transparent</item>
        <item name="colorControlActivated">@color/transparent</item>
        <item name="colorControlHighlight">@color/transparent</item>
    </style>

    <style name="SwitchTheme">
        <item name="colorControlNormal">@color/grey_1</item>
        <item name="colorControlActivated">@color/ui_red</item>
    </style>

    <style name="MyTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:textAllCaps">false</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextAppearance">@style/MyTabLayoutText</item>
    </style>

    <style name="MyTabLayoutText" parent="TextAppearance.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/text_white_fraction</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="ABM.Black.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Widget.ABM.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/ui_primary</item>
        <item name="navigationIcon">?attr/homeAsUpIndicator</item>
        <item name="titleTextAppearance">@style/TextAppearance.ABM.Headline4.White</item>
    </style>

    <style name="Widget.ABM.Toolbar.Light" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/white</item>

        <item name="titleTextAppearance">@style/TextAppearance.ABM.Headline4</item>
    </style>

    <style name="ThemeOverlay.ABM.Toolbar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="toolbarStyle">@style/Widget.ABM.Toolbar</item>
    </style>

    <style name="ThemeOverlay.ABM.Toolbar.Light" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="toolbarStyle">@style/Widget.ABM.Toolbar.Light</item>
    </style>

    <style name="ABM.Black.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorAccent">@color/text_black</item>
        <item name="colorControlActivated">@color/text_black</item>
        <item name="colorControlNormal">@color/text_black</item>
        <item name="colorControlHighlight">@color/text_black</item>
        <item name="android:textColorPrimary">@color/text_black</item>
        <item name="android:textColorSecondary">@color/text_black</item>
        <item name="android:textSize">16sp</item>
        <item name="hintTextAppearance">@style/FloatingEditTextTheme</item>

        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="PeriodDateViewEditTextStyle" parent="EditTextStyle">
        <item name="colorAccent">@color/divider_color</item>
        <item name="colorControlActivated">@color/divider_color</item>
        <item name="colorControlNormal">@color/divider_color</item>
        <item name="colorControlHighlight">@color/divider_color</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:focusable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="PaymentInputViewEditTextStyle" parent="EditTextStyle">
        <item name="colorAccent">@color/divider_color</item>
        <item name="colorControlActivated">@color/divider_color</item>
        <item name="colorControlNormal">@color/divider_color</item>
        <item name="colorControlHighlight">@color/divider_color</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="textColor">@color/text_black</item>
    </style>

    <style name="PeriodDateViewDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:datePickerStyle">@style/PeriodDateViewDatePickerStyle</item>
    </style>

    <style name="PeriodDateViewDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/yan_color</item>
    </style>

    <style name="DateViewStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:hint">Date</item>
    </style>

    <style name="DateViewEditTextStyle" parent="Widget.AppCompat.EditText">

        <item name="android:drawablePadding">8dp</item>
        <item name="android:focusable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:singleLine">true</item>

        <item name="colorAccent">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="DateViewDatePickerSpinnerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:datePickerStyle">@style/DatePickerSpinnerStyle</item>
    </style>

    <style name="DatePickerSpinnerStyle" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="Divider" />
    <style name="Divider.Horizontal" parent="Divider" />
    <style name="Divider.Vertical" parent="Divider" />

    <style name="Divider.Horizontal.Dark" parent="Divider.Horizontal">
        <item name="android:layout_height">1dp</item>

    </style>
    <style name="Divider.Horizontal.Light" parent="Divider.Horizontal">
        <item name="android:layout_height">1dp</item>

    </style>
    <style name="Divider.Vertical.Dark" parent="Divider.Vertical">
        <item name="android:layout_width">1dp</item>

    </style>
    <style name="Divider.Vertical.Light" parent="Divider.Vertical">
        <item name="android:layout_width">1dp</item>

    </style>

    <style name="PullToLoad"/>
    <style name="PullToLoad.ErrorView" parent="TextAppearance.ABM.Body1">
        <item name="android:background">@color/white</item>
        <item name="android:padding">@dimen/paddingL</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="PullToLoad.ProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateTint">@color/brand_red</item>
        <item name="android:indeterminate">true</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="InfoBlock" parent="TextAppearance.ABM.Body2">

        <item name="android:paddingStart">@dimen/paddingM</item>
        <item name="android:paddingEnd">@dimen/paddingM</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="InfoHintBlock" parent="TextAppearance.ABM.Caption">

        <item name="android:paddingStart">@dimen/paddingM</item>
        <item name="android:paddingEnd">@dimen/paddingM</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="InfoHintBlock.NoBackground" parent="InfoHintBlock">
        <item name="android:background">@null</item>
    </style>

</resources>